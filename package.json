    "@types/multer": "^2.0.0",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.35.6",
    "@vercel/og": "^0.8.5",
    "axios": "^1.13.2",
    "cloudinary": "^2.8.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "html-to-image": "^1.11.13",
    "ioredis": "^5.8.2",
    "lru-cache": "^11.2.2",
    "mongoose": "^8.19.3",
    "multer": "^2.0.2",
    "next": "16.0.1",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
