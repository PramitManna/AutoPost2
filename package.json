{
  "name": "autopost",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "type-check": "tsc --noEmit",
    "cleanup": "node scripts/cleanup-job.ts",
    "validate-production": "node -e \"require('./lib/security-config').validateProductionEnvironment()\"",
